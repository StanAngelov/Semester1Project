@model Semester1Project.ViewModels.UserApplicationViewModel
<div class="BannerRoot">
    <a href="@Url.Action("JobApplicant/"+Model.Applicant.UserId+"/"+Model.Application.ApplicationId)">
        <div class="row jobrow">
            <div class="col-xs-9 jobbanner">
                <span class="bannerSpanTitle">@Model.Applicant.FullName </span>
                <span class="bannerSpanLocation">@Model.Applicant.UserName </span>
            </div>
            <div class="col-xs-3 jobpayment">
                <span class="bannerPayment">Phone: @Model.Applicant.PhoneNum</span>
                <br />
                <span>@Model.Applicant.Email</span>
            </div>
        </div>
    </a>
</div>

@Html.ActionLink("Hire", "Hire", new { id = Model.Application.ApplicationId }) |
@Html.ActionLink("Decline", "Decline", new { id = Model.Application.ApplicationId }) |
